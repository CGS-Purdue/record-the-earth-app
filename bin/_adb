#!/bin/bash

# EXPO HELPER
# -------------
# BUILD THE ANDROID PROJECT FROM THE ./android directory
BASE_DIR="$(npm prefix)"

[[ -f .npmrc ]] && source .npmrc


[[ -z $ANDROID_HOME ]] && echo 'ANDROID_HOME is not set. Skipping command' && exit 0

ABD_PATH="${ANDROID_HOME}/platform-tools"

# RCT_METRO_PORT=8081
$ANDROID_HOME/platform-tools/adb "$@"

# comma-separated list of debug info to log:
# ADB_TRACE | all,adb,sockets,packets,rwx,usb,sync,sysdeps,transport,jdwp
# ADB_VENDOR_KEYS    |    colon-separated list of keys (files or directories)
# ANDROID_SERIAL     |    serial number to connect to (see -s)
# ANDROID_LOG_TAGS             | tags to be used by logcat (see logcat --help)
# ADB_LOCAL_TRANSPORT_MAX_PORT | max emulator scan port (default 5585, 16 emus)
# DEBUG_LOGGING="yes"
# export DEBUG_LOGGING
# EDITOR="atom" REACT_EDITOR="${EDITOR}" EXPO_DEBUG="true" DEV_ENV="expo" DEBUG_LOGGING="${DEBUG_LOGGING}" expo \
#   start --clear \
#     --max-workers 3 \
#     --no-minify \
#     --host localhost \
#     --dev \
#     --android
# #


# sync [all|data|odm|oem|product|system|system_ext|vendor]
#     sync a local build from $ANDROID_PRODUCT_OUT to the device (default all)
#     -l: list but don't copy
#
