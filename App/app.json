{
  "expo": {
    "name": "RecordTheEarthExpo",
    "slug": "record-the-earth-expo",
    "description": "Updating RtE react-native app to be fully managed with expo.",
    "privacy": "unlisted",
    "sdkVersion": "34.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "entryPoint": "init.js",
    "splash": {
      "icon": "./icon.png",
      "hideExponentText": false
    },
    "androidShowExponentNotificationInShellApp": true,
    "version": "1.0.0",
    "orientation": "portrait",
    "primaryColor": "#cccccc",
    "icon": "./icon.png",
    "splash": {
      "image": "./splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "Theme/Assets/**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "splash": {
          "backgroundColor": "#ffffff",
          "resizeMode": "contain",
          "image": "./splash.png",
      },
    },
    "android" : {
      "package" : "org.recordtheearth.expo",
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "githubUrl": "https://github.com/charrismatic/record-the-earth-reach-native",
    "extra": {},
    "rnCliPath": "",
    "packagerOpts": {
      "assetExts": [
        "ttf",
        "otf",
        "xml",
        "png"
      ]
    }
  }
}
